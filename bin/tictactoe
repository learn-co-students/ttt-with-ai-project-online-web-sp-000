#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic-Tac-Toe! Press 1 to play against a friend and 2 to play the computer."
opponent = gets.strip
  
if opponent == "1"
  puts "Spaces are numbered 1-9, with 1 at the top left."
  Game.new.play
elsif opponent == "2"
  puts "Press 1 to play first, 2 to play second."
  order = gets.strip
  if order == "1"
    puts "Spaces are numbered 1-9, with 1 at the top left."
    Game.new(nil, player_2=Players::Computer.new("O"), nil).play
  elsif order == "2"
    puts "Spaces are numbered 1-9, with 1 at the top left."
    Game.new(player_1=Players::Computer.new("X"), nil, nil).play
  end
end