#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic Tac Toe!"
puts "How many players will be playing today?"
number_of_players = gets.strip
if number_of_players == "1" then
  puts "Who would you like to go first, Human or Computer?"
  player_a = gets.strip
else puts "Who would like to go first, Player A or Player B"
puts "Player X goes first. Who should be player X?"
player_x = gets.strip
